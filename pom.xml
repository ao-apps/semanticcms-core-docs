<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>com.semanticcms</groupId>
		<artifactId>semanticcms-core</artifactId>
		<version>1.4-SNAPSHOT</version>
	</parent>

	<groupId>com.semanticcms</groupId>
	<artifactId>semanticcms-core-docs</artifactId>
	<version>1.3-SNAPSHOT</version>
	<packaging>war</packaging>

	<name>SemanticCMS Core Docs</name>
	<url>https://semanticcms.com/core/docs/</url>
	<description>Documentation runner for Java API for modeling web page content and relationships.</description>

	<scm>
		<connection>scm:git:git://github.com/aoindustries/semanticcms-core-docs.git</connection>
		<developerConnection>scm:git:git@github.com:aoindustries/semanticcms-core-docs.git</developerConnection>
		<url>http://github.com/aoindustries/semanticcms-core-docs</url>
		<tag>HEAD</tag>
	</scm>

	<profiles>
		<profile> 
			<id>release</id>
			<build>
				<plugins>
					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-war-plugin</artifactId>
						<version>3.0.0</version>
						<configuration>
							<overlays>
								<overlay>
									<groupId>com.semanticcms</groupId>
									<artifactId>semanticcms-core-model</artifactId>
									<type>jar</type>
									<classifier>javadoc</classifier>
									<targetPath>core/model/apidocs</targetPath>
								</overlay>
								<overlay>
									<groupId>com.semanticcms</groupId>
									<artifactId>semanticcms-core-servlet</artifactId>
									<type>jar</type>
									<classifier>javadoc</classifier>
									<targetPath>core/servlet/apidocs</targetPath>
								</overlay>
								<overlay>
									<groupId>com.semanticcms</groupId>
									<artifactId>semanticcms-core-sitemap</artifactId>
									<type>jar</type>
									<classifier>javadoc</classifier>
									<targetPath>core/sitemap/apidocs</targetPath>
								</overlay>
								<overlay>
									<groupId>com.semanticcms</groupId>
									<artifactId>semanticcms-core-style</artifactId>
									<type>jar</type>
									<classifier>javadoc</classifier>
									<targetPath>core/style/apidocs</targetPath>
								</overlay>
								<overlay>
									<groupId>com.semanticcms</groupId>
									<artifactId>semanticcms-core-taglib</artifactId>
									<type>jar</type>
									<classifier>javadoc</classifier>
									<targetPath>core/taglib/apidocs</targetPath>
								</overlay>
								<overlay>
									<groupId>com.semanticcms</groupId>
									<artifactId>semanticcms-core-theme-base</artifactId>
									<type>jar</type>
									<classifier>javadoc</classifier>
									<targetPath>core/theme-base/apidocs</targetPath>
								</overlay>
								<overlay>
									<groupId>com.semanticcms</groupId>
									<artifactId>semanticcms-core-view-content</artifactId>
									<type>jar</type>
									<classifier>javadoc</classifier>
									<targetPath>core/view-content/apidocs</targetPath>
								</overlay>
							</overlays>
						</configuration>
					</plugin>
				</plugins>
			</build>
			<dependencies>
				<dependency>
					<groupId>com.semanticcms</groupId>
					<artifactId>semanticcms-core-model</artifactId>
					<version>1.7-SNAPSHOT</version>
					<classifier>javadoc</classifier>
				</dependency>
				<dependency>
					<groupId>com.semanticcms</groupId>
					<artifactId>semanticcms-core-servlet</artifactId>
					<version>1.8-SNAPSHOT</version>
					<classifier>javadoc</classifier>
				</dependency>
				<dependency>
					<groupId>com.semanticcms</groupId>
					<artifactId>semanticcms-core-sitemap</artifactId>
					<version>1.8-SNAPSHOT</version>
					<classifier>javadoc</classifier>
				</dependency>
				<dependency>
					<groupId>com.semanticcms</groupId>
					<artifactId>semanticcms-core-style</artifactId>
					<version>1.3-SNAPSHOT</version>
					<classifier>javadoc</classifier>
				</dependency>
				<dependency>
					<groupId>com.semanticcms</groupId>
					<artifactId>semanticcms-core-taglib</artifactId>
					<version>1.7-SNAPSHOT</version>
					<classifier>javadoc</classifier>
				</dependency>
				<dependency>
					<groupId>com.semanticcms</groupId>
					<artifactId>semanticcms-core-theme-base</artifactId>
					<version>1.1-SNAPSHOT</version>
					<classifier>javadoc</classifier>
				</dependency>
				<dependency>
					<groupId>com.semanticcms</groupId>
					<artifactId>semanticcms-core-view-content</artifactId>
					<version>1.4-SNAPSHOT</version>
					<classifier>javadoc</classifier>
				</dependency>
			</dependencies>
		</profile>
	</profiles>

	<dependencies>
		<dependency>
			<groupId>javax.servlet</groupId>
			<artifactId>javax.servlet-api</artifactId>
			<version>3.0.1</version>
			<scope>provided</scope>
		</dependency>
		<dependency>
			<groupId>javax.servlet.jsp</groupId>
			<artifactId>javax.servlet.jsp-api</artifactId>
			<version>2.2.1</version>
			<scope>provided</scope>
		</dependency>
		<dependency>
			<groupId>com.semanticcms</groupId>
			<artifactId>semanticcms-all</artifactId>
			<version>1.2-SNAPSHOT</version>
			<type>pom</type>
		</dependency>
		<dependency>
			<groupId>com.semanticcms</groupId>
			<artifactId>semanticcms-theme-documentation-style</artifactId>
			<version>1.5-SNAPSHOT</version>
		</dependency>
	</dependencies>
</project>
